<div class="row">
    <div class="col s12">
        <h4 class="center-align">Students Directory</h4>
    </div>
</div>

  <div class="row">
  <% @students.each do |student|%>
    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= student.name %></span>
          <p>E-mail: <%= student.email %></p>
          <p>Course Enrollments: None</p>
        </div>
        <div class="card-action">
          <% link_to "View Profile", student_path(student) %>
        </div>
      </div>
    </div>
    <%end%>
  </div>